 set guifont=Source\ Code\ Pro\ 10

 set t_Co=256
 
 set autoread
 set ruler
 
 set ignorecase
 
 set noerrorbells
 set novisualbell
 
 
 set smartindent
 set tabstop=4
 set shiftwidth=4
 set expandtab
 
 set number
 
 set ai "Auto indent
 set si "Smart Indent
 set wrap "Wrap lines
 
 filetype on
 filetype plugin indent on
 
colorscheme gruvbox
set background=dark

autocmd VimEnter * NERDTree
let NERDTreeShowHidden=1
